<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://ws3.sinaimg.cn/large/0069RVTdgy1fupx4omvesj301s01sweg.jpg">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'form' %>
    </div>
  </article>

<% @tweeets.each do |tweeet| %>
<div class="box">
  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://ws3.sinaimg.cn/large/0069RVTdgy1fupx4omvesj301s01sweg.jpg">
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
          <strong>Yuelin Liu</strong>
          <small>@liuyuelin</small>
          <br>
          <p><%= tweeet.tweeet %></p>
      </div>
      <nav class="level-left">
        <div class="level is-mobile">
          <%= link_to tweeet, class: "level-item" do%>
            <span class="icon is-small"><i class="fa fa-link" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to edit_tweeet_path(tweeet), class: "level-item" do%>
            <span class="icon is-small"><i class="fa fa-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to tweeet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?"} do%>
            <span class="icon is-small"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
          <% end %>
        </div>
      </nav>
  </div>
  </article>
</div>
<% end %>
</div>
